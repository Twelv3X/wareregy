<h1>Registar Utilizador</h1>

<form action="/registarUtilizador" method="POST">
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
  </div>
    <div class="form-group">
    <label for="nome">Utilizador</label>
    <input type="text" class="form-control" name="nome" placeholder="Enter username" required>
  </div>
  {{#if msg}}
  <div class="alert {{msgClass}}" role="alert">
  {{msg}}
  </div>
  {{/if}}
  <button type="submit" class="btn btn-primary">Submit</button>
   
</form>


